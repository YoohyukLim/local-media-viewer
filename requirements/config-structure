# config.yaml 구조
video_directories:       # 스캔할 비디오 디렉토리 목록
  - "D:/videos"         # 실제 비디오가 있는 경로

thumbnails:             # 썸네일 설정
  directory: "D:/videos/thumbnails"  # 썸네일 저장 경로
  extension: ".webp"     # 썸네일 파일 확장자
  duration: 3.0      # 썸네일 영상 길이 (초)
  fps: 5.0          # 초당 프레임 수
  max_size: 480     # 최대 크기 (px)
  max_workers: 6    # 썸네일 생성 워커 수 